<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Uniform_Management" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary" tools:ignore="DuplicateDefinition">@color/white</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorSecondary" tools:ignore="DuplicateDefinition">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary" tools:ignore="DuplicateDefinition">@color/blue</item>
    </style>

    <style name="Theme.Uniform_Management" parent="Base.Theme.Uniform_Management" />
    <style name="Theme.Uniform_Management.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Uniform_Management.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Uniform_Management.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>